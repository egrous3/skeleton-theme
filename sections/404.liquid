{% comment %}
  This section is used in the 404 template to render page shown when customers
  enter an invalid store URL.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/404
{% endcomment %}

<div class="text-center py-12">
  <h1 class="text-3xl font-bold mb-4">{{ '404.title' | t }}</h1>

  <p class="text-gray-700 mb-6">
    {{ '404.not_found' | t }}
  </p>

  <a href="{{ routes.all_products_collection_url }}" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700">
    {{ '404.back_to_shopping' | t }}
  </a>
</div>

{% schema %}
{
  "name": "t:general.404",
  "settings": []
}
{% endschema %}
