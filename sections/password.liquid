{% comment %}
  This section is used in the password template to render landing page shown
  when password protection is applied to a store.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/password
{% endcomment %}

<div class="max-w-md mx-auto py-12 text-center">
  <h1 class="text-3xl font-bold mb-6">{{ 'password.title' | t }}</h1>

  {% if shop.password_message %}
    <p class="text-gray-700 mb-6">{{ shop.password_message }}</p>
  {% endif %}

  {% form 'storefront_password', class: 'space-y-4' %}
    {% if form.errors %}
      <div class="text-red-600 mb-4">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div class="space-y-2">
      <label for="password-input" class="block text-sm font-medium text-gray-700">
        {{ 'password.password' | t }}
      </label>

      <input type="password" name="password" id="password-input" class="w-full p-3 border border-gray-300 rounded-md">
    </div>

    <button type="submit" class="w-full px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer">
      {{ 'password.enter' | t }}
    </button>
  {% endform %}
</div>

{% schema %}
{
  "name": "t:general.password",
  "settings": []
}
{% endschema %}
